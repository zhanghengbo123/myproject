<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

       <context:property-placeholder location="classpath:jdbc.properties,classpath:config.properties,classpath:shiro.properties" file-encoding="UTF-8" ignore-resource-not-found="true" ignore-unresolvable="true"/>
       <import resource="classpath:spring-dao.xml"/>
       <import resource="classpath:spring-service.xml"/>
       <import resource="classpath:spring-shiro.xml"/>
       <import resource="classpath:spring-jedis.xml"/>
       <import resource="classpath:spring-cache.xml"/>
</beans>